<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/foodDetailIV"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:scaleType="centerCrop"
        android:foreground="@drawable/trending_gradient_shape"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/vegIv"
        android:layout_width="27dp"
        android:layout_height="24dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/foodDetailIV"
        app:layout_constraintTop_toBottomOf="@+id/foodDetailIV"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/dishTitleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textColor="#111"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/vegIv"
        app:layout_constraintTop_toBottomOf="@+id/foodDetailIV" />

    <TextView
        android:id="@+id/offerTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="Offers Applied"
        android:textColor="#111"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/vegIv"
        app:layout_constraintTop_toBottomOf="@+id/foodDetailIV" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="24dp"
        android:layout_height="20dp"
        android:layout_marginTop="120dp"
        app:layout_constraintStart_toStartOf="@+id/vegIv"
        app:layout_constraintTop_toBottomOf="@+id/foodDetailIV"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/offerDetailTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="120dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/imageView8"
        app:layout_constraintTop_toBottomOf="@+id/foodDetailIV" />

    <TextView
        android:id="@+id/nutritionTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="168dp"
        android:text="Nutrition"
        android:textColor="#111"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/vegIv"
        app:layout_constraintTop_toBottomOf="@+id/foodDetailIV" />

    <TextView
        android:id="@+id/calorieValueTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="216dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/vegIv"
        app:layout_constraintTop_toBottomOf="@+id/foodDetailIV" />

    <TextView
        android:id="@+id/proteinValueTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="77dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/calorieValueTv"
        app:layout_constraintTop_toBottomOf="@+id/offerDetailTv" />

    <TextView
        android:id="@+id/fatValueTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginTop="216dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/proteinValueTv"
        app:layout_constraintTop_toBottomOf="@+id/foodDetailIV" />

    <TextView
        android:id="@+id/carbsValueTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginTop="216dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/fatValueTv"
        app:layout_constraintTop_toBottomOf="@+id/foodDetailIV" />

    <TextView
        android:id="@+id/calorieTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Calories"
        app:layout_constraintStart_toStartOf="@+id/vegIv"
        app:layout_constraintTop_toBottomOf="@+id/calorieValueTv" />

    <TextView
        android:id="@+id/proteinTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Protein"
        app:layout_constraintStart_toStartOf="@+id/proteinValueTv"
        app:layout_constraintTop_toBottomOf="@+id/proteinValueTv" />

    <TextView
        android:id="@+id/fatTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Fat"
        app:layout_constraintStart_toStartOf="@+id/fatValueTv"
        app:layout_constraintTop_toBottomOf="@+id/fatValueTv" />

    <TextView
        android:id="@+id/carbsTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Carbs"
        app:layout_constraintStart_toStartOf="@+id/carbsValueTv"
        app:layout_constraintTop_toBottomOf="@+id/carbsValueTv" />

    <TextView
        android:id="@+id/foodDetailTv"
        android:layout_width="349dp"
        android:layout_height="183dp"
        android:layout_marginTop="21dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/vegIv"
        app:layout_constraintTop_toBottomOf="@+id/calorieTv" />
</androidx.constraintlayout.widget.ConstraintLayout>